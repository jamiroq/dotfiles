# encoding
defencodig utf8

## Prefix key
escape ^Tt

# Remove startup messages
startup_message off

# Display the process number
## $ screen -ls

# Support different screen
altscreen on

# automatically detach
autodetach on

# emacs keybind for copy mode
markkeys h=^b:l=^f:$=^e:^d=^v:^D=^V

# Emacs key bind
bind x eval 'echo "2: split / 1: only / 0: remove / o: focus r: resize"' 'command -c REGION'
bind -c REGION 2 split
bind -c REGION 1 only
bind -c REGION 0 remove
bind -c REGION o focus
bind -c REGION r eval 'echo "j: -1 / k: +1 / other: quit"' 'command -c RESIZE'
bind -c RESIZE = eval 'resize ='  'command -c RESIZE'
bind -c RESIZE J eval 'resize +5' 'command -c RESIZE'
bind -c RESIZE K eval 'resize -5' 'command -c RESIZE'
bind -c RESIZE j eval 'resize +1' 'command -c RESIZE'
bind -c RESIZE k eval 'resize -1' 'command -c RESIZE'

# logging
log on
deflog on
logfile "/Users/hogehoge/log/screen-%Y%m%d-%n.log"

# copy/scrollback mode
defscrollback 10000

# Turn off the visualbell
vbell off

# Not change the window size
termcapinfo xterm-256color 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

# Display screnn-list and clock
# hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"

# coor prompt
hardstatus alwayslastline "%{= rw} %H %{= wk}%-Lw%{= bw}%n%f* %t%{= wk}%+Lw %{= wk}%=%{= gk} %y/%m/%d %c "

# Display screnn-list
hardstatus alwayslastline "%w"

