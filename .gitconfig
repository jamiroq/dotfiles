[user]
    name = jamiroq
    email = jamiroq24@gmail.com
[color]
    ui = auto
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[core]
    excludesfile = ~/.gitignore  # globalな.gitignoreの指定
    autocrlf = input                 # CRLFを自動変換
    editor = vim
    pager = less
[alias]
    st = status
    ad = add
    co = commit
    ch = checkout
    br = branch
    wc = whatchanged         # logに変更されたファイルも一緒に出す
    ls = log --stat          # logに変更されたファイルも一緒に出す
    lp = log -p              # diffも一緒に出す
    ll = log --graph --all --decorate --abbrev-commit --branches --date=short --pretty=format:\"%C(red)%h%C(reset) %C(green)[%ad]%C(reset) %s %C(cyan)@%an%C(reset) %C(yellow)%d%C(reset)\"
    di = diff
    dc = diff --cached
    sh = show
    s1 = show HEAD~1
    s2 = show HEAD~2
    s3 = show HEAD~3
    s4 = show HEAD~4
    s5 = show HEAD~5
