"=============================================
" General
"=============================================
" Vimを使う
set editor='/usr/bin/vim'
" ツールバーはアドオンとタブのみ表示
set gui=addons,nobookmarks,nomenu,nonavigation
" beepをoff
" set noerrorbells
set visualbell
highlight Bell display:none
" 入力欄への自動フォーカス無効
set focuscontent
" 保管候補をサーチエンジン、履歴に限定
set complete=sl
" hint設定 キーボード中段のみを使う
set hintchars=hjklasdfgyuiopqwertnmzxcvb
" 検索で大文字小文字を無視
set ignorecase
set smartcase
" commandモードでIMEオフ
style! -name=commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

"=============================================
" key mapping
"=============================================
" 移動関連
noremap j 5j
noremap k 5k
noremap <C-e> 5j
noremap <C-y> 5k
nnoremap d <C-d>
nnoremap u <C-u>
" タブ移動
nnoremap J <C-p>
nnoremap K <C-n>
map <C-n> :tabmove! +1<CR>
map <C-p> :tabmove! -1<CR>
" タブの削除・復元
nnoremap x <C-w>
nnoremap X :undo<CR>

" google検索を手早くする
noremap s :open<Space>google<Space>
noremap S :tabopen<Space>google<Space>
" ブラウザ再起動
nnoremap <C-r> :reload<CR>
nnoremap R :source~/.vimperatorrc<CR>

"=============================================
" Color
"=============================================
" Hint
hi Hint font-family: Arial; font-size: 18px; font-weight: bold; text-shadow: -1px -1px 2px black, 1px -1px 2px black, -1px 1px 2px black, 1px 1px 2px black; color: #33cccc;
hi HintElem color: gray; background-color: #a1e4e6;
hi HintActive color: black; background-color: #ff8700;

" Error
hi ErrorMsg color:white; background-color: #ec6aa1;

"=============================================
" Firefox Config
"=============================================
" ダウンロードウィンドウを完了後自動で閉じる
set! browser.download.manager.closeWhenDone=true
" ダウンロード履歴をFirefox終了時に削除
set! browser.download.manager.retention=1
" ダウンロードウィンドウを完了後自動で閉じる
set! browser.download.manager.closeWhenDone=true
" JavaScriptのステータスバー操作を無効化
set! dom.event.contextmenu.enabled=false
" アドオンインストール時の待ち時間カット
set! security.dialog_enable_delay=0

